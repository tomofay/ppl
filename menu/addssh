echo -e "ğ—£ğ—®ğ˜†ğ—¹ğ—¼ğ—®ğ—± ğ—¦ğ—¦ğ—Ÿ / ğ—§ğ—Ÿğ—¦ : 
GET wss://BUG.COM/ HTTP/1.1[crlf]Host: $domain[crlf]Upgrade: websocket[crlf][crlf]" | tee -a /etc/user-create/user.log
