<code>â˜‰â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â˜‰</code>
"

curl -s --max-time 10 -d "chat_id=$CHATID&disable_web_page_preview=1&text=$TEXT&parse_mode=html" $URL >/dev/null

# --- 5. OUTPUT TERMINAL (FULL STYLE - SESUAI FILE ASLI) ---
clear
echo ""
echo -e "\033[1;93mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\033[0m" | tee -a /etc/user-create/user.log
echo -e "ğŸ”µ Success Create SSH & ZIVPN ğŸ”µ" | tee -a /etc/user-create/user.log
echo -e "\033[1;93mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\033[0m" | tee -a /etc/user-create/user.log
echo -e "â¤ Domain        : $domain" | tee -a /etc/user-create/user.log
echo -e "â¤ Username      : $Login" | tee -a /etc/user-create/user.log
echo -e "â¤ Password      : $Pass" | tee -a /etc/user-create/user.log
echo -e "â¤ ZIVPN Token   : $Login" | tee -a /etc/user-create/user.log
echo -e "\033[1;93mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\033[0m" | tee -a /etc/user-create/user.log
echo -e "â¤ Limit Ip      : $iplimit Device" | tee -a /etc/user-create/user.log
echo -e "\033[1;93mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\033[0m" | tee -a /etc/user-create/user.log
echo -e "â¤ IP            : $IP" | tee -a /etc/user-create/user.log
echo -e "â¤ Limit Quota   : $Quota GB" | tee -a /etc/user-create/user.log
echo -e "â¤ Host Slowdns  : ${NS}" | tee -a /etc/user-create/user.log
echo -e "â¤ Isp           : $ISP" | tee -a /etc/user-create/user.log
echo -e "â¤ Location      : $CITY" | tee -a /etc/user-create/user.log
echo -e "â¤ Port OpenSSH  : 443, 80, 22" | tee -a /etc/user-create/user.log
echo -e "â¤ Port DNS      : 443, 53 ,22 " | tee -a /etc/user-create/user.log
echo -e "â¤ Port SSH UDP  : 1-65535" | tee -a /etc/user-create/user.log
echo -e "â¤ Port ZIVPN    : $UDP_ZIVPN" | tee -a /etc/user-create/user.log
echo -e "â¤ Port Dropbear : 443, 109" | tee -a /etc/user-create/user.log
echo -e "â¤ Port SSH WS   : 80, 8080, 8880, 2082" | tee -a /etc/user-create/user.log
